    <section class="tools-section" id="tools">
        <h2 class="section-title">Our Tools</h2>
        <div class="tools-grid">
            <div class="tool-card">
                <i class="fas fa-text-height tool-icon"></i>
                <h3>Text Generator</h3>
                <p>Create engaging content with our advanced AI text generation tool</p>
                <button class="btn" onclick="openTool('text-generator')">Try Now</button>
            </div>
            <div class="tool-card">
                <i class="fas fa-image tool-icon"></i>
                <h3>Image Generator</h3>
                <p>Transform your ideas into stunning visuals using AI</p>
                <button class="btn" onclick="openTool('image-generator')">Try Now</button>
            </div>
            <div class="tool-card">
                <i class="fas fa-code tool-icon"></i>
                <h3>Code Assistant</h3>
                <p>Get intelligent coding suggestions and solutions</p>
                <button class="btn" onclick="openTool('code-assistant')">Try Now</button>
            </div>
        </div>
